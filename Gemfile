source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
# Full-stack web application framework. (http://www.rubyonrails.org)
gem 'rails', '4.2.5'
# Use postgresql as the database for Active Record
# Pg is the Ruby interface to the {PostgreSQL RDBMS}[http://www.postgresql.org/] (https://bitbucket.org/ged/ruby-pg)
gem 'pg', '~> 0.15'
# PostgreSQL Acceleration for ActiveRecord (https://github.com/JackC/surus)
gem "surus"
# Add UUID support for ActiveRecord. It enforces uuid primary keys, fixes ActiveRecord's first/last methods and more. (http://rubygems.org/gems/ar-uuid)
gem "ar-uuid"

# UNIONs in ActiveRecord! Adds proper union and union_all methods to ActiveRecord::Relation. (https://github.com/brianhempel/active_record_union)
gem 'active_record_union'
# Use SCSS for stylesheets
# Sass adapter for the Rails asset pipeline. (https://github.com/rails/sass-rails)
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
# Ruby wrapper for UglifyJS JavaScript compressor (http://github.com/lautis/uglifier)
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
# CoffeeScript adapter for the Rails asset pipeline. (https://github.com/rails/coffee-rails)
gem 'coffee-rails', '~> 4.1.0'
# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
# Use jQuery with Rails 4+ (http://rubygems.org/gems/jquery-rails)
gem 'jquery-rails'
# an asset gemification of the font-awesome icon font library (https://github.com/bokmann/font-awesome-rails)
gem "font-awesome-rails"
# bootstrap-sass is a Sass-powered version of Bootstrap 3, ready to drop right into your Sass powered applications. (https://github.com/twbs/bootstrap-sass)
gem 'bootstrap-sass'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
# Create JSON structures via a Builder-style DSL (https://github.com/rails/jbuilder)
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
# rdoc html with javascript search index. (http://github.com/voloko/sdoc)
gem 'sdoc', '~> 0.4.0', group: :doc

# Use Unicorn as the app server
# Puma is a simple, fast, threaded, and highly concurrent HTTP 1.1 server for Ruby/Rack applications (http://puma.io)
gem 'puma'

# Embed the V8 JavaScript interpreter into Ruby (http://github.com/cowboyd/therubyracer)
gem 'therubyracer',  platforms: :ruby
# Embed the Rhino JavaScript interpreter into JRuby (http://github.com/cowboyd/therubyrhino)
gem 'therubyrhino',  platforms: :jruby

# To use debugger
# Use Pry as your rails console (https://github.com/rweng/pry-rails)
gem  'pry-rails'
# Provides YARD and extended documentation support for Pry (https://github.com/pry/pry-doc)
gem  'pry-doc'
# A Ruby-aware git layer (http://github.com/pry/pry-git)
gem  'pry-git'
# Walk the stack in a Pry session (https://github.com/pry/pry-stack_explorer)
gem  'pry-stack_explorer'
# Connect to Pry remotely (http://github.com/Mon-Ouie/pry-remote)
gem  'pry-remote'
# Open a pry session on any unhandled exceptions (https://github.com/ConradIrwin/pry-rescue)
gem  'pry-rescue'
# Pretty print Ruby objects with proper indentation and colors (http://github.com/michaeldv/awesome_print)
#gem  "awesome_print"
# Ruby 2.0 fast debugger - base + CLI (http://github.com/deivid-rodriguez/byebug)
gem  'byebug'

#AUTHENTICATION
# JSON Web Token implementation in Ruby (http://github.com/progrium/ruby-jwt)
gem 'jwt'
# Flexible authentication solution for Rails with Warden (https://github.com/plataformatec/devise)
gem "devise"
# Encryption solution for salted-encryptors on Devise (http://github.com/plataformatec/devise-encryptable)
gem "devise-encryptable"
# Devise Async provides an easy way to configure Devise to send its emails asynchronously using your preferred queuing backend. It supports Backburner, Resque, Sidekiq, Delayed::Job, QueueClassic, Que, Sucker Punch and Torquebox. (https://github.com/mhfs/devise-async/)
gem "devise-async"


# getting resources from oauth2 servers
# A generalized Rack framework for multiple-provider authentication. (http://github.com/intridea/omniauth)
gem 'omniauth'
gem 'omniauth-foursquare'
gem 'omniauth-instagram'


# providing oauth2 server functionality
# OAuth 2 provider for Rails and Grape (https://github.com/doorkeeper-gem/doorkeeper)
gem 'doorkeeper'
# JWT token generator for Doorkeeper (https://github.com/chriswarren/doorkeeper-jwt)
gem 'doorkeeper-jwt'
# Integrate Doorkeeper OAuth2 tokens into Devise applications
gem 'devise-doorkeeper'

# Authorization
# OO authorization for Rails (https://github.com/elabs/pundit)
gem "pundit"

# DYMANIC HASHES
# Your friendly neighborhood hash toolkit. (https://github.com/intridea/hashie)
gem 'hashie'
# simple extension to Hashie::Mash for rubyified keys (http://github.com/tcocca/rash)
gem 'rash'

# BACKGROUND PROCESSING
# for session store and cache store
# rubyzip is a ruby module for reading and writing zip files (http://github.com/rubyzip/rubyzip)
gem 'rubyzip' #we need this to play nice with sidekiq, otherwise it struggles to load zip
# A Ruby client library for Redis (https://github.com/redis/redis-rb)
gem 'redis'
# Redis for Ruby on Rails (http://redis-store.org/redis-rails)
gem 'redis-rails'

# Classy web-development dressed in a DSL (http://www.sinatrarb.com/)
gem 'sinatra', require: nil
# Simple, efficient background processing for Ruby (http://sidekiq.org)
gem 'sidekiq'
# for checking the status of a specific job
# An extension to the sidekiq message processing to track your jobs (http://github.com/utgarda/sidekiq-status)
gem 'sidekiq-status' # for checking the status of a specific job
# gem "sidekiq-cron"

# for active record enumerations
# Enumerated attributes with I18n and ActiveRecord/Mongoid/MongoMapper support (https://github.com/brainspec/enumerize)
gem  "enumerize"

# rails config
# Easiest way to add multi-environment yaml settings to Rails, Sinatra, Pandrino and other ruby projects. (https://github.com/railsconfig/config)
gem 'config'

# seed migrations
# Rails Data Migration (http://github.com/harrystech/seed_migration)
gem 'seed_migration'

# Annotates Rails Models, routes, fixtures, and others based on the database schema. (http://github.com/ctran/annotate_models)
gem 'annotate', :github => 'ctran/annotate_models'

# GLOBAL VARIABLES IN EACH REQUEST
#git@github.com:steveklabnik/request_store.git
# RequestStore gives you per-request global storage. (http://github.com/steveklabnik/request_store)
gem 'request_store'


# Admininstration
# Admin for Rails (https://github.com/sferik/rails_admin)
gem 'rails_admin', :github => 'sferik/rails_admin'
# gem 'rails_admin_history_rollback', :github => "rikkipitt/rails_admin_history_rollback"
# A wysiwyg text editor for Bootstrap (https://github.com/Nerian/bootstrap-wysihtml5-rails)
gem 'bootstrap-wysihtml5-rails', '> 0.3.1.24'
# Country Select Plugin (https://github.com/stefanpenner/country_select)

gem 'currency_select', github: 'tanordheim/currency_select'

